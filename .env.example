# .env.example
# Space Invaders JS V91 - Environment Variables Template
# ===================================================

# Application Configuration
# ------------------------
NODE_ENV=development                    # Options: development, production, test
PORT=3000                               # Application port
HOST=localhost                          # Application host

# Development Settings
# -------------------
DEBUG=true                              # Enable debug mode
WEBPACK_DEV_SERVER_PORT=8080            # Webpack dev server port
HOT_RELOAD=true                         # Enable hot reload for development

# Game Configuration
# -----------------
GAME_CANVAS_WIDTH=800                   # Game canvas width in pixels
GAME_CANVAS_HEIGHT=600                  # Game canvas height in pixels
GAME_FPS=60                            # Game frames per second
SOUND_ENABLED=true                      # Enable game sounds

# API Configuration (if needed)
# ----------------------------
API_URL=http://localhost:3001           # Backend API URL
API_TIMEOUT=5000                        # API timeout in milliseconds
API_VERSION=v1                          # API version

# Database Configuration (if needed)
# --------------------------------
DB_HOST=localhost                       # Database host
DB_PORT=5432                           # Database port
DB_NAME=space_invaders                 # Database name
DB_USER=developer                      # Database user
DB_PASSWORD=your_secure_password       # Database password

# Cache Configuration
# ------------------
REDIS_HOST=localhost                    # Redis host
REDIS_PORT=6379                         # Redis port
REDIS_PASSWORD=your_redis_password      # Redis password

# Security
# --------
JWT_SECRET=your_jwt_secret_key         # JWT secret key
CORS_ORIGIN=http://localhost:3000      # CORS allowed origin
ENCRYPTION_KEY=your_encryption_key     # Encryption key for sensitive data

# Logging & Monitoring
# -------------------
LOG_LEVEL=info                         # Options: debug, info, warn, error
SENTRY_DSN=your_sentry_dsn            # Sentry DSN for error tracking
ENABLE_PERFORMANCE_MONITORING=true     # Enable performance monitoring

# Testing
# -------
TEST_BROWSER=chrome                    # Browser for running tests
HEADLESS=true                         # Run tests in headless mode
JEST_TIMEOUT=10000                    # Jest timeout in milliseconds

# Build Configuration
# ------------------
ASSET_PATH=/assets                    # Path for static assets
BUNDLE_ANALYZER=false                 # Enable webpack bundle analyzer
SOURCE_MAPS=true                      # Generate source maps

# Third-party Services (if needed)
# -------------------------------
ANALYTICS_ID=your_analytics_id        # Analytics tracking ID
STORAGE_BUCKET=your_storage_bucket    # Cloud storage bucket name

# Feature Flags
# ------------
ENABLE_MULTIPLAYER=false              # Enable multiplayer features
ENABLE_ACHIEVEMENTS=true              # Enable achievements system
ENABLE_LEADERBOARD=true              # Enable leaderboard features

# ===================================================
# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with actual values
# 3. Never commit the actual .env file to version control
# 4. Keep this template updated when adding new environment variables
# ===================================================