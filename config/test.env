# Space Invaders JS V91 - Test Environment Configuration
# Last Updated: 2025-01-20
# Purpose: Testing environment configuration settings

#######################
# Core Game Settings
#######################
GAME_ENV=test
DEBUG=true
LOG_LEVEL=debug
TEST_MODE=enabled

#######################
# Game Engine Config
#######################
GAME_CANVAS_WIDTH=800
GAME_CANVAS_HEIGHT=600
GAME_FPS=60
PHYSICS_UPDATE_RATE=120
ENABLE_VSYNC=false

#######################
# Test Suite Config
#######################
TEST_SUITE_ID=c9ae078d-124b-44d5-bb51-fa238298557e
JEST_TIMEOUT=10000
BENCHMARK_ITERATIONS=1000
PERFORMANCE_THRESHOLD_MS=16.67
MEMORY_LEAK_CHECK=enabled

#######################
# Asset Loading
#######################
ASSET_LOAD_TIMEOUT=5000
MOCK_ASSETS=true
ASSET_BASE_PATH=/test/assets

#######################
# Network Simulation
#######################
SIMULATE_NETWORK_LATENCY=true
NETWORK_LATENCY_MS=50
PACKET_LOSS_RATE=0.02

#######################
# Logging & Metrics
#######################
ENABLE_PERFORMANCE_LOGGING=true
METRICS_COLLECTION=enabled
TELEMETRY_ENDPOINT=http://localhost:9090/metrics
LOG_FILE_PATH=/logs/test.log

#######################
# Test Database
#######################
TEST_DB_HOST=localhost
TEST_DB_PORT=27017
TEST_DB_NAME=space_invaders_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password_123

#######################
# Cache Settings
#######################
REDIS_TEST_HOST=localhost
REDIS_TEST_PORT=6379
CACHE_TTL=300

#######################
# Security
#######################
TEST_JWT_SECRET=test_jwt_secret_key_123
HASH_SALT_ROUNDS=10
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

#######################
# Error Handling
#######################
DETAILED_ERROR_MESSAGES=true
STACK_TRACE_ENABLED=true
ERROR_REPORTING_URL=http://localhost:8080/errors

#######################
# Feature Flags
#######################
ENABLE_NEW_COLLISION_SYSTEM=true
ENABLE_PARTICLE_EFFECTS=true
ENABLE_SOUND_EFFECTS=false
ENABLE_AI_OPPONENTS=true

#######################
# Test Automation
#######################
HEADLESS_TESTING=true
SCREENSHOT_ON_FAILURE=true
VIDEO_CAPTURE_ENABLED=false
SAVE_TEST_ARTIFACTS=true
TEST_ARTIFACTS_PATH=/artifacts/test

#######################
# Performance Testing
#######################
ENABLE_CPU_PROFILING=true
ENABLE_MEMORY_PROFILING=true
PERFORMANCE_LOG_INTERVAL=1000
MAX_MEMORY_USAGE_MB=512