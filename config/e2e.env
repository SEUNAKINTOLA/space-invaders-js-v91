# =============================================================================
# Space Invaders JS V91 - E2E Test Environment Configuration
# Purpose: Environment configuration for Enemy and Combat Systems E2E testing
# Last Updated: 2025-01-20
# =============================================================================

# =============================================================================
# Test Environment Configuration
# =============================================================================
NODE_ENV=test
E2E_MODE=enabled
TEST_SUITE_ID=ecb1571b-4a41-4f5a-8d82-e1802887df45

# =============================================================================
# Game Engine Settings
# =============================================================================
GAME_FRAME_RATE=60
PHYSICS_UPDATE_RATE=120
COLLISION_DETECTION_PRECISION=high

# =============================================================================
# Enemy System Configuration
# =============================================================================
ENEMY_SPAWN_RATE=1000
ENEMY_MOVEMENT_SPEED=2.5
ENEMY_ATTACK_INTERVAL=2000
MAX_ENEMIES_ON_SCREEN=50
ENEMY_HEALTH_POINTS=100

# =============================================================================
# Combat System Configuration
# =============================================================================
PROJECTILE_SPEED=5.0
HITBOX_TOLERANCE=0.1
DAMAGE_CALCULATION_MODE=precise
COMBAT_LOG_LEVEL=debug

# =============================================================================
# Test Automation Settings
# =============================================================================
HEADLESS_MODE=true
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=enabled
TEST_TIMEOUT=30000
RETRY_ATTEMPTS=3
WAIT_BETWEEN_ACTIONS=100

# =============================================================================
# Performance Monitoring
# =============================================================================
PERFORMANCE_METRICS_ENABLED=true
METRICS_SAMPLING_RATE=1000
MEMORY_THRESHOLD_MB=512
FPS_WARNING_THRESHOLD=55

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT_DIR=./logs/e2e
TRACE_ID_HEADER=X-Trace-ID

# =============================================================================
# Mock Service Configuration
# =============================================================================
MOCK_SERVICES_PORT=3001
MOCK_LATENCY_MS=50
MOCK_FAILURE_RATE=0.1

# =============================================================================
# Test Data Configuration
# =============================================================================
TEST_DATA_SET=enemy_combat_suite
SEED_DATA_PATH=./test/fixtures/enemy-patterns.json
CLEANUP_AFTER_TEST=true

# =============================================================================
# Security Settings
# =============================================================================
AUTH_DISABLED=true
CORS_ENABLED=false
RATE_LIMITING_DISABLED=true

# =============================================================================
# Browser Configuration
# =============================================================================
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
BROWSER_TYPE=chromium
USER_AGENT=E2E-Test-Agent/1.0

# =============================================================================
# Report Generation
# =============================================================================
REPORT_FORMAT=html
REPORT_OUTPUT_DIR=./reports/e2e
INCLUDE_SCREENSHOTS=true
INCLUDE_CONSOLE_LOGS=true