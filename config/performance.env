# =============================================================================
# Space Invaders JS V91 - Performance Configuration
# Environment: Production
# Last Updated: 2025
# =============================================================================

# Game Loop Configuration
# ----------------------
GAME_LOOP_FIXED_TIMESTEP=16.666667  # Target 60 FPS (in milliseconds)
GAME_LOOP_MAX_FRAME_SKIP=5          # Maximum number of frame skips for catch-up
GAME_LOOP_PANIC_THRESHOLD=300       # Time in ms before triggering panic mode

# Frame Rate Thresholds
# --------------------
FPS_TARGET=60                       # Target frames per second
FPS_MIN_ACCEPTABLE=30              # Minimum acceptable FPS before optimization
FPS_WARNING_THRESHOLD=45           # FPS threshold for warning notifications
FPS_SAMPLING_PERIOD=1000           # FPS calculation window in milliseconds

# Performance Monitoring
# ---------------------
PERF_METRICS_ENABLED=true          # Enable performance metrics collection
PERF_METRICS_INTERVAL=5000         # Metrics collection interval (ms)
PERF_METRICS_BUFFER_SIZE=1000      # Maximum metrics entries to store
PERF_METRICS_AUTO_DUMP=true        # Auto-dump metrics when buffer is full

# Canvas Rendering
# ---------------
CANVAS_MAX_DIMENSION=1920          # Maximum canvas dimension (pixels)
CANVAS_DOWNSCALE_THRESHOLD=45      # FPS threshold for resolution scaling
CANVAS_SCALE_FACTOR=0.75           # Scale factor when performance is poor
CANVAS_BATCH_SIZE=100              # Maximum sprites in a single batch

# Memory Management
# ----------------
MEMORY_WARNING_THRESHOLD=85        # Memory usage warning threshold (%)
MEMORY_CRITICAL_THRESHOLD=95       # Memory usage critical threshold (%)
GARBAGE_COLLECTION_INTERVAL=300000 # Suggested GC interval (ms)

# Debug & Monitoring
# -----------------
DEBUG_SHOW_FPS=false              # Show FPS counter in game
DEBUG_SHOW_FRAME_TIME=false       # Show frame time in game
DEBUG_PERFORMANCE_LOGGING=false    # Enable detailed performance logging
PERFORMANCE_TELEMETRY_ENABLED=true # Enable telemetry data collection

# Asset Loading
# ------------
ASSET_LOAD_TIMEOUT=10000          # Asset loading timeout (ms)
ASSET_RETRY_ATTEMPTS=3            # Number of retry attempts for failed loads
ASSET_CONCURRENT_LOADS=5          # Maximum concurrent asset loads

# Error Handling
# -------------
ERROR_SAMPLING_RATE=0.1           # Error reporting sampling rate (0-1)
ERROR_BATCH_SIZE=10               # Number of errors to batch before sending
ERROR_REPORT_INTERVAL=60000       # Error reporting interval (ms)

# Performance Optimization Flags
# ----------------------------
ENABLE_REQUEST_ANIMATION_FRAME=true    # Use requestAnimationFrame
ENABLE_HARDWARE_ACCELERATION=true      # Enable hardware acceleration
ENABLE_OFFSCREEN_CANVAS=true          # Use OffscreenCanvas when available
ENABLE_ADAPTIVE_PERFORMANCE=true       # Enable dynamic performance adjustments

# Resource Limits
# --------------
MAX_PARTICLE_COUNT=1000           # Maximum number of particles
MAX_SPRITE_COUNT=500              # Maximum number of sprites
MAX_AUDIO_INSTANCES=20            # Maximum concurrent audio instances
MAX_CACHED_OBJECTS=200            # Maximum cached game objects

# Network Performance (Multiplayer)
# -------------------------------
NETWORK_LATENCY_THRESHOLD=100     # Maximum acceptable latency (ms)
NETWORK_UPDATE_RATE=20            # Network updates per second
NETWORK_BUFFER_SIZE=32            # Network buffer size (KB)