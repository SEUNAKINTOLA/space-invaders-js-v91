# =============================================================================
# Space Invaders JS V91 - Audio Testing Environment Configuration
# Version: 1.0.0
# Last Updated: 2025-01-20
# Environment: Testing
# =============================================================================

# -----------------------------------------------------------------------------
# Audio Engine Configuration
# -----------------------------------------------------------------------------
AUDIO_ENGINE=web-audio-api
AUDIO_CONTEXT_SAMPLE_RATE=48000
AUDIO_BUFFER_SIZE=2048
AUDIO_CHANNELS=2

# -----------------------------------------------------------------------------
# Audio Testing Parameters
# -----------------------------------------------------------------------------
AUDIO_TEST_MODE=enabled
AUDIO_MOCK_ENABLED=true
AUDIO_VIRTUAL_DEVICE=test-device-01

# Test Sound File Paths
TEST_SOUND_DIR=/tests/fixtures/audio
EXPLOSION_SOUND_PATH=${TEST_SOUND_DIR}/explosion.wav
LASER_SOUND_PATH=${TEST_SOUND_DIR}/laser.wav
BACKGROUND_MUSIC_PATH=${TEST_SOUND_DIR}/background.mp3

# -----------------------------------------------------------------------------
# Audio Quality Settings
# -----------------------------------------------------------------------------
AUDIO_QUALITY_LEVEL=high
AUDIO_COMPRESSION_ENABLED=false
AUDIO_BIT_DEPTH=16
AUDIO_FORMAT=wav

# -----------------------------------------------------------------------------
# Performance Testing Configuration
# -----------------------------------------------------------------------------
AUDIO_LATENCY_THRESHOLD_MS=50
AUDIO_MEMORY_LIMIT_MB=256
AUDIO_CONCURRENT_SOUNDS_MAX=8

# -----------------------------------------------------------------------------
# Logging and Debugging
# -----------------------------------------------------------------------------
AUDIO_DEBUG_MODE=true
AUDIO_LOG_LEVEL=debug
AUDIO_METRICS_ENABLED=true
AUDIO_PROFILING_ENABLED=true

# -----------------------------------------------------------------------------
# Test Suite Configuration
# -----------------------------------------------------------------------------
TEST_TIMEOUT_MS=5000
TEST_RETRY_ATTEMPTS=3
TEST_PARALLEL_EXECUTION=true
TEST_REPORT_FORMAT=junit

# -----------------------------------------------------------------------------
# External Services (Mock)
# -----------------------------------------------------------------------------
MOCK_AUDIO_SERVICE_PORT=8081
MOCK_AUDIO_SERVICE_HOST=localhost
MOCK_AUDIO_API_VERSION=v1

# -----------------------------------------------------------------------------
# Error Handling
# -----------------------------------------------------------------------------
ERROR_RETRY_ATTEMPTS=3
ERROR_FALLBACK_ENABLED=true
GRACEFUL_SHUTDOWN_TIMEOUT_MS=3000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_SPATIAL_AUDIO=true
FEATURE_DYNAMIC_MIXING=true
FEATURE_AUDIO_EFFECTS=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
AUDIO_API_RATE_LIMIT=100
AUDIO_API_TIMEOUT_MS=2000
AUDIO_SECURE_CONTEXT_REQUIRED=true

# -----------------------------------------------------------------------------
# Validation Constants
# -----------------------------------------------------------------------------
MAX_AUDIO_FILE_SIZE_MB=10
SUPPORTED_AUDIO_FORMATS=wav,mp3,ogg
MIN_SAMPLE_RATE=22050
MAX_SAMPLE_RATE=96000

# -----------------------------------------------------------------------------
# Polish Features Testing
# -----------------------------------------------------------------------------
POLISH_LANGUAGE_ENABLED=true
POLISH_AUDIO_LOCALIZATION_PATH=/tests/fixtures/audio/pl
POLISH_TEXT_ENCODING=UTF-8

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
METRICS_COLLECTION_INTERVAL_MS=1000
PERFORMANCE_MONITORING_ENABLED=true
AUDIO_HEALTH_CHECK_INTERVAL_MS=5000